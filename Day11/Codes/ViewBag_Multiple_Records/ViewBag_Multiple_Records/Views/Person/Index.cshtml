
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<h2>Person Details</h2>

<table class="table">
    <thead>
        <tr>
            <th>Person Name</th>
            <th>Person Address</th>
            <th>Person Email</th>
            <th>Person Contact</th>
        </tr>
    </thead>
    <tbody>
        @{ 
            var personlst =ViewBag.Persons;
            foreach(var person in personlst)
            {
                <tr>
                    <td>@person.PersonName</td>
                    <td>@person.PersonAddress</td>
                    <td>@person.PersonEmail</td>
                    <td>@person.PersonContact</td>
                </tr>
            }
        }
    </tbody>
</table>